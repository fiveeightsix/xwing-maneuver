{
  "name": "xwing-maneuver",
  "version": "0.0.0",
  "description": "X-Wing maneuver quiz.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://fiveeightsix.github.com/xwing-maneuver"
  },
  "author": "Karl Inglis <mail@karlinglis.net>",
  "license": "BSD-2-Clause",
  "dependencies": {
    "react": "~0.14.5",
    "flux": "~2.1.1",
    "react-dom": "~0.14.5",
    "classnames": "~2.2.3",
    "keymirror": "~0.1.1"
  },
  "devDependencies": {
    "browserify": "~12.0.1",
    "uglifyjs": "~2.4.10",
    "browserify-shim": "~3.8.11",
    "exorcist": "~0.4.0",
    "budo": "~7.1.0",
    "babelify": "~7.2.0",
    "babel-preset-es2015": "~6.3.13",
    "babel-preset-react": "~6.3.13",
    "node-sass": "~3.4.2",
    "bower": "~1.7.2"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "copy-xwing-font": "mkdir -p dist/xwing-miniatures-font && cp -r bower_components/xwing-miniatures-font/dist/* dist/xwing-miniatures-font/",
    "build-html": "cp html/*.html dist/",
    "build-css": "node-sass scss --output dist/css",
    "build-js": "browserify src/index.js --debug | exorcist dist/xwing-maneuver.js.map > dist/xwing-maneuver.js",
    "start": "budo src/index.js:xwing-maneuver.js --dir dist"
  }
}
